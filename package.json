{
  "name": "file-bundler-desktop",
  "version": "0.2.0",
  "description": "A desktop application for bundling files and folders into a single copyable file.",
  "author": "Benjamin Simmons",
  "license": "MIT",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimmoM8/file-bundler.git"
  },
  "bugs": {
    "url": "https://github.com/SimmoM8/file-bundler/issues"
  },
  "homepage": "https://github.com/SimmoM8/file-bundler#readme",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish always",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.benjaminsimmons.filebundler",
    "productName": "File Bundler",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/**",
      "!.git/**"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.7.0"
  }
}
